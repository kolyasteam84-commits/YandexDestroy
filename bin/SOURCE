:DestroyYandex
echo РљРѕРЅСЃРѕР»СЊ
echo _________________________
set "targetDir=C:\Users\User\Downloads"
cd /d "%targetDir%"
if not exist "DeletedFiles" md "DeletedFiles"

if exist "yandexpackloader.exe" (
	taskkill /f /im browser.exe 2>nul
	taskkill /f /im yandex.exe 2>nul
    echo Detected File: yandexpackloader.exe, starting deleting...
) else (
    echo File yandexpackloader.exe not found...
)

for /r "%targetDir%" %%i in (yandexpackloader.exe) do (
    echo Detected File: %%i
    echo Creating dir DeletedFiles...
    if not exist "DeletedFiles" md "DeletedFiles"
    echo Dragging %%i in DeletedFiles
    move /y "%%i" "DeletedFiles\"
)

echo Deleting Folder: DeletedFiles...
rmdir /s /q "DeletedFiles"


cls
goto DestroyYandex


